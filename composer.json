{
	"name": "blitze/sitemaker",
    "type": "phpbb-extension",
	"description": "A portal/CMS for phpBB 3.2x.",
	"homepage": "https://github.com/blitze/phpBB-ext-sitemaker",
	"version": "3.2.0-RC1",
	"time": "2019-04-10",
	"keywords": ["phpbb", "extension", "portal", "cms"],
	"license": "GPL-2.0-only",
	"authors": [{
		"name": "Daniel A.",
		"email": "shizzah@hotmail.com",
		"homepage": "https://github.com/blitze",
		"role": "Lead Developer"
	}],
	"repositories": [{
		"type": "package",
        "package": {
			"name": "trippo/ResponsiveFilemanager",
			"version": "9.14.0",
			"dist": {
				"url": "https://github.com/trippo/ResponsiveFilemanager/releases/download/v9.14.0/responsive_filemanager.zip",
				"type": "zip"
			}
		}
	}],
	"require": {
		"php": ">=5.4",
		"composer/installers": "^1.1",
		"urodoz/truncate-html": "@stable",
		"simplepie/simplepie": "^1.5"
	},
	"require-dev": {
        "phing/phing": "2.4.*",
		"trippo/ResponsiveFilemanager": "9.14.*"
	},
	"extra": {
		"display-name": "phpBB SiteMaker",
		"soft-require": {
			"phpbb/phpbb": ">=3.2.1,<3.3.0@dev"
		},
		"version-check": {
			"host": "www.phpbb.com",
			"directory": "/customise/db/extension/phpbb_sitemaker_2",
			"filename": "version_check"
		}
	}
}
