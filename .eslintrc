{
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"extends": [
		"eslint:recommended",
		"plugin:import/errors",
		"plugin:import/warnings",
		"airbnb-base",
		"eslint-config-prettier"
	],
	"env": {
		"browser": true,
		"jquery": true,
		"es6": true
	},
	"plugins": ["dollar-sign", "smells", "prettier"],
	"rules": {
		"indent": [2, "tab"],
		"no-tabs": 0,
		"arrow-parens": 0,
		"dollar-sign/dollar-sign": [2, "ignoreProperties"],
		"no-param-reassign": 0,
		"smells/no-switch": 1,
		"smells/no-complex-switch-case": 1,
		"smells/no-setinterval": 1,
		"smells/no-this-assign": 1
	},
	"ignorePatterns": ["styles/*", "vendor/*"]
}
