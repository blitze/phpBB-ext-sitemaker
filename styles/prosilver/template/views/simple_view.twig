<div class="panel post sm-block-container{{ block.class }} sm-block-spacing"{{ block.css_style }}>
	<div class="inner">
		{% if block.title and not block.hide_title %}
		<h2 class="sm-list-inner">
			<span class="block-icon"><i class="{{ block.icon }}" aria-hidden="true"></i></span>
			<span class="block-title{{ editable }}">{{ block.title }}</span>
		</h2>
		{% endif %}
		<div class="sm-block-content">
			{{ block.content ? block.content : include(block.template, block.data is iterable ? block.data : []) }}
		</div>
	</div>
</div>
